<form action="/api/resize" method="get">
    <div class="form__item">
        <label for="filename">File Name:</label>
        <input type="text" name="filename" id="filename" placeholder="Enter Image File Name ..." required>
    </div>

    <div class="form__item">
        <label for="width">Width:</label>
        <input type="number" name="width" id="width" min="100" max="1000" value="600" required>
    </div>

    <div class="form__item">
        <label for="height">Height:</label>
        <input type="number" name="height" id="height" min="100" max="1000" value="600" required>
    </div>

    <button type="submit">Apply</button>
</form>
